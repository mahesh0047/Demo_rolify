<p id="notice"><%= notice %></p>


<table class="table table-dark" style="width: auto;">
  <tr>
    <td><strong>Name:</strong></td>
    <td><%= @user.name.titleize %></td>
  </tr>

  <tr>
    <td><strong>Email:</strong></td>
    <td><%= @user.email %></td>
  </tr>

  <tr>
    <td><strong>Phone no:</strong></td>
    <td><%= @user.phone_no %></td>
  </tr>

  <tr>
    <td><strong>State:</strong></td>
    <td><%= @user.state.name.titleize %></td>
  </tr>

  <tr>
    <td><strong>City:</strong></td>
    <td><%= @user.city.name.titleize %></td>
  </tr>

  <tr>
    <td><strong>Company:</strong></td>
    <td><%= @user.company.name.titleize %></td>
  </tr>

   <tr>
    <td><strong>Role:</strong></td>
    <td><%= @user.roles.first.name.titleize %></td>
  </tr>

  <tr>
    <td><strong>Languages:</strong></td>
    <td><%= @user.languages.pluck(:name).join(", ") %></td>
  </tr>
</table>

