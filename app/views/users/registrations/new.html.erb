<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "users/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="field col-md-5">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

   <div class="field col-md-5">
    <%= f.label :phone_no %>
    <%= f.text_field :phone_no %>
  </div>

  <div class="field col-md-5">
    <%= f.label :state %>
    <%= f.select(:state_id, State.all.collect {|s| [s.name, s.id]}, {:prompt => 'Select State'},{:class => "form-control"}) %>
  </div>

  <div class="field col-md-5">
    <%= f.label :city %>
    <%= f.select(:city_id, {}, {:prompt => 'Select City'},{:class => "form-control", id: 'city'}) %>
  </div>

  <div class="field col-md-5">
    <%= f.label :company_id %>
    <%= f.select(:company_id, Company.all.collect {|c| [c.name, c.id]},{:prompt => 'Select company'},{:class => "form-control"})%>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "users/shared/links" %>

