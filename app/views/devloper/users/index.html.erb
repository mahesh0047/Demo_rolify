<p id="notice"><%= notice %></p>


<div class="page-header">
  <h1>Users</h1>
</div>

<table class="table table-dark">
  <thead class="bg-secondary text-white">
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Phone no</th>
      <th>State</th>
      <th>City</th>
      <th>company</th>
      <th>Role</th>
      <th>Languages</th>
      <th colspan="3" ></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name.titleize %></td>
        <td><%= user.email %></td>
        <td><%= user.phone_no %></td>
        <td><%= user.state_name.titleize %></td>
        <td><%= user.city_name.titleize %></td>
        <td><%= user.company_name&.titleize %></td>
        <td><%= user.roles.first&.name&.titleize %></td>
        <td><%= user.languages.pluck(:name).join(", ") %></td>
        <td><%= link_to 'Show', devloper_user_path(user) , class: 'btn btn-success text-white' %></td>
        <%# <td><%= link_to 'Edit',  edit_devloper_user_path(user), class: 'btn btn-info text-white' %>
        <%# <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' },class: 'btn btn-danger text-white' %>
      </tr>
    <% end %>
  </tbody>
</table>

