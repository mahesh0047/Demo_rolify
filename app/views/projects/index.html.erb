<p id="notice"><%= notice %></p>

<h1>Projects</h1>

<table class="table table-dark">
  <thead class="bg-secondary text-white">
    <tr>
      <th>Name</th>
      <th>Start date</th>
      <th>Language</th>
      <th>Action</th>
      <th>Action</th>
      <th>Action</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @projects.each do |project| %>
      <tr>
        <td><%= project.name.titleize %></td>
        <td><%= project.start_date %></td>
        <td><%= project.language.name.titleize %></td>
        <td><%= link_to 'Show', project, class: 'btn btn-success text-white' %></td>
        <td><%= link_to 'Edit', edit_project_path(project), class: 'btn btn-info text-white' %></td>
        <td><%= link_to 'Destroy', project, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger text-white' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Project', new_project_path, class: 'btn btn-warning text-white' %>
